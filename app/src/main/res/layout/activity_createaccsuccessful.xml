<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorusername"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createaccsuccessful">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="362dp"
        android:layout_height="283dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342"
        app:srcCompat="@drawable/home_design" />

    <TextView
        android:id="@+id/acccreatesucc"
        android:layout_width="316dp"
        android:layout_height="109dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="60dp"
        android:paddingTop="15dp"
        android:text="Your Account Has Been"
        android:textColor="@color/colorsignupbackground"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.988" />

    <TextView
        android:id="@+id/accsuccmsg"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="30dp"
        android:text="Successfully Created"
        android:textColor="@color/colorsignupbackground"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/acccreatesucc"
        app:layout_constraintEnd_toEndOf="@+id/acccreatesucc"
        app:layout_constraintStart_toStartOf="@+id/acccreatesucc"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.958" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="75dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/acccreatesucc"
        app:layout_constraintVertical_bias="0.174"
        app:srcCompat="@drawable/ic_action_accsucess" />
</android.support.constraint.ConstraintLayout>